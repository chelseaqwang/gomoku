<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.clearwater.gomoku.main"
    android:touchscreenBlocksFocus="false"
    android:transitionGroup="false"
    android:id="@+id/mainmenu">

    <Button
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="@string/button_offline"
        android:id="@+id/button1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:textSize="30sp"
        android:layout_alignParentEnd="false"
        android:clickable="false"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/button" />

    <Button
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:text="@string/button_online"
        android:id="@+id/button"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        android:clickable="false"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:singleLine="true"
        android:background="@drawable/button" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button2"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:singleLine="true"
            android:background="@drawable/profile" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:layout_marginLeft="50dp"
            android:singleLine="true"
            android:background="@drawable/statistics" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button4"
            android:layout_below="@+id/button3"
            android:layout_alignRight="@+id/button3"
            android:layout_alignEnd="@+id/button3"
            android:textSize="30sp"
            android:layout_marginLeft="50dp"
            android:singleLine="true"
            android:background="@drawable/button_setting" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button5"
            android:textSize="30sp"
            android:layout_below="@+id/button4"
            android:layout_alignLeft="@+id/button4"
            android:layout_alignStart="@+id/button4"
            android:background="@drawable/exit_button"
            android:layout_marginLeft="50dp"
            android:singleLine="true" />

    </LinearLayout>

    <TextView
        android:layout_width="500dp"
        android:layout_height="160dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:textSize="120sp"
        android:background="@drawable/gomoku"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp" />

</RelativeLayout>
